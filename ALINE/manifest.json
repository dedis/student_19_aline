{
	"name": "ALINE",
	"version": "1.0.0",
	"description": "ALINE stands for ''Attestation that online content existed'' and is a plugin to certify web content with the aid of a decentralized, proof-of-consensus, and blockchain-based ledger.",
	"manifest_version": 2,
	"icons": { "128": "icon.png" },
	"author": "Charline Montial",
    "background": {
      "scripts": ["dist/bundle.min.js",
                  "scripts/css_selector_scripts/jquery-3.4.1.js",
                  "scripts/css_selector_scripts/selectorGadget.js",
                  "scripts/css_selector_scripts/diff_match_patch.js",
                  "scripts/css_selector_scripts/dom.js",
                  "scripts/css_selector_scripts/interface.js"],
      "persistent": true
    },
    
	"browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "permissions": [
   "tabs",
   "webRequest",
   "*://localhost/"
  ],
  
  "optional_permissions": [
        "<all_urls>", "webRequest", "https://wookiee.ch/conode"
  ],
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"


}